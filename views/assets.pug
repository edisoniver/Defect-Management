doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Asset Selection
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css")
    link(rel='stylesheet', href='/app.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      div.container
        a.navbar-brand(href="/") BV
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div#navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/assets") Assets
    div.container.py-5
      h1.mb-4 Select Asset
      table.table
        thead
          tr
            th Name
            th Actions
            th Report
        tbody
          each asset in assets
            tr
              td= asset.name
              td
                a.btn.btn-outline-primary(href=`/defects/${asset._id}`) View Defects
              td
                a.btn.btn-outline-primary(href=`/assets/${asset._id}/defects/report`) Generate Asset Report
      div.text-center.mt-4
        a.btn.btn-outline-primary(href='/') Back to Upload
        a.btn.btn-primary(href='/assets/create') Create Asset
        
    script(src="https://code.jquery.com/jquery-3.6.0.min.js", crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js", crossorigin="anonymous")
