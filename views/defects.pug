doctype html
html
  head
    title Defects List
    link(rel="stylesheet", href="/css/bootstrap.min.css")
    link(rel='stylesheet', href='/app.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="/") BV
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
      div#navbarNav.collapse.navbar-collapse
          ul.navbar-nav
              li.nav-item.active
                  a.nav-link(href="/assets") Assets
    .grid-container
      h1 Defects
      table
        thead
          tr
            th Unique ID
            th Defect Number
            th Overview Photo
            th Close-up Photo
            th Description
            th User
            th Date
            th Report
        tbody
          each defect in defects
            tr
              td= defect.uniqueID
              td= defect.defectNumber
              td
                img(src='/uploads/' + defect.overviewPhoto.url, alt=defect.description, width=100, height=100)
              td
                img(src='/uploads/' + defect.closeupPhoto.url, alt=defect.description, width=100, height=100)
              td= defect.description
              td= defect.user
              td= defect.date.toISOString().slice(0, 10)
              td
                a(href='/defects/report/' + defect._id) Generate Report
      a(href='/') Back to Upload
      script(src='https://code.jquery.com/jquery-3.6.0.min.js', crossorigin='anonymous')
      script(src="/js/bootstrap.bundle.min.js")
      